<div class="container">
  <h3>商品新規登録</h3>
  <div class="row">
      
     
     <%= form_with model:@item, url:admin_items_path,local: true do |f| %>
     <div class="col">
         
     </div>
       <table class="admin_items">
        <tr>
          <th>商品画像</th>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= f.collection_select (:genre_id,@genre, :id, :name , prompt: "選択してください") %></td>
        </tr>
        
          
          
          