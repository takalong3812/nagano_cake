<div class="row">
  <div class="col m-3">
    <h3 class="text-white">注文履歴一覧</h3>
           <table class="table table-borderless table-dark mt-5" style="opacity: 0.8;">
            <thead class="thead-dark">
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>ステータス</td>
      <td>注文詳細</td>
    </tr> 
    </thead>
    <tbody>
    <% @orders.each do |order| %>
    <tr>
     <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
     <td><%= order.postal_code %><br>
         <%= order.address %><br>
         <%= order.name %><br>
     </td>
            
            <td>
               <% order.order_detail.each do |order_detail| %>
               <%= order_detail.item.name %><br>
               <% end %>
            </td>    
    <td><%= (order.shipping_fee + order.billing_amount).to_s(:delimited) %>円</td>
    <td><%= order.order_status_i18n %></td>
    <td><%= link_to "表示する", public_orders_path(order), class:'btn btn-primary text-white' %></td>
    </tr>
  <% end %>
 </tbody>
 </table>
 </div>
 </div>