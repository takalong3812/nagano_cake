<div class="container">
    <div class="row">
        <h2 class="col-md-5">配送先登録/一覧</h2>
    </div>
    <%= form_with model:@address,url:public_addresses_path, local:true do |f| %>
    
    
    
    <div class="form-group row">
        <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 control-label" %>
        <%= f.text_field :postal_code, class: "col-xs-4 form-control-static postal_code" %>
    </div>
    
    <div class="form-group row">
        <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
        <%= f.text_field :address, class: "col-xc-7 form-control-static address" %>
    </div>
        
    <div class="form-group col-xs-12">
        <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
        <%= f.text_field :name, class: "col-xs-4 form-control-static name" %>
    </div>
    <%= f.submit '配送先を登録する' ,class: "col-xs-2 pull-right btn-lg btn-success " %>

<% end %>
</div>

   <table class="table table-hover table-bordered">
       <thead>
           <tr class="info">
               <th>郵便番号</th>
               <th>住所</th>
               <th>宛名</th>
           </tr>
       </thead>
       <tbody>
         <% @addresses.each do |address| %>
          <tr>
             <td><%= address.postal_code %></td>
             <td><%= address.address %></td>
             <td><%= address.name %></td>
             <td><%= link_to "編集する", edit_public_address_path(address) %>
                <%= link_to "削除する", public_address_path(address), method: :delete, confirm: "本当に削除しますか" %></td>
          </tr>
          <% end %>
       </tbody>
   </table>
       
       